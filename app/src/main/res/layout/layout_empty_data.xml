<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerEmptyData"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivEmptyData"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="@string/content_desc"
        android:scaleType="centerInside"
        android:src="@drawable/ic_empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/labelEmptyData"
        android:textAppearance="@style/TextView.PoppinsRegularGrey"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tidak Ada Data"
        app:layout_constraintEnd_toEndOf="@+id/ivEmptyData"
        app:layout_constraintStart_toStartOf="@+id/ivEmptyData"
        app:layout_constraintTop_toBottomOf="@+id/ivEmptyData"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>